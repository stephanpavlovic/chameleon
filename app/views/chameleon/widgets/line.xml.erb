<?xml version="1.0" encoding="UTF-8"?>
<root>
  <series>
    <name><%= @data[:name] || 'Line Chart' %></name>
    <% @data[:items].each do |item| %>
      <data>
        <% if item.is_a?(Hash) %>
          <x><%= item[:x] || '' %></x>
          <y><%= item[:y] || '' %></y>
        <% else %>
          <%= item %>
        <% end %>
      </data>
    <% end %>
    <% if @data[:incomplete_from] %>
      <incomplete_from><%= @data[:incomplete_from] %></incomplete_from>
    <% end %>
  </series>
  <% if @data[:x_axis]%>
    <x_axis>
      <% if @data[:x_axis][:type] %>
        <type><%= @data[:x_axis][:type] %></type>
      <% end %>
      <% if @data[:x_axis][:values] %>
        <% @data[:x_axis][:values].each do |x| %>
          <labels><%= x %></labels>
        <% end %>
      <% end %>
    </x_axis>
  <% end %>
</root>
