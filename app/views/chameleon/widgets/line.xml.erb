<?xml version="1.0" encoding="UTF-8"?>
<root>
  <series>
    <name><%= @data[:name] || 'Line Chart' %></name>
    <% @data[:items].each do |item| %>
      <data><%= item %></data>
    <% end %>
  </series>
  <% if @data[:x_axis]%>
    <x_axis>
      <% @data[:x_axis].each do |x| %>
        <labels><%= x %></labels>
      <% end %>
    </x_axis>
  <% end %>
</root>
