<?xml version="1.0" encoding="UTF-8"?>
<root>
  <series>
    <name><%= @data[:name] || 'Line Chart' %></name>
    <% @data[:items].each do |item| %>
      <data>
        <name><%= item.is_a?(Hash)%></name>
        <% if item.is_a?(Hash) %>
          <x><%= item[:x] || '' %><x>
          <y><%= item[:y] || '' %><y>
        <% else %>
          <%= item %>
        <% end %>
      </data>
      <% if @data[:incomplete_from] %>
        <incomplete_from>
          <%= @data[:incomplete_from] %>
        </incomplete_from>
      <% end %>
    <% end %>
  </series>
  <% if @data[:x_axis]%>
    <x_axis>
      <% @data[:x_axis].each do |x| %>
        <labels><%= x %></labels>
      <% end %>
    </x_axis>
  <% end %>
</root>
